<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".CalculatedActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="10"
        android:id="@+id/gridLayout"
        android:useDefaultMargins="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/PurchasePrice_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Purchase Price"/>


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/PurchasePrice"
            android:layout_row="0"
            android:layout_column="1"
            android:editable="true" />

        <TextView
            android:id="@+id/PurchasePrice_post_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="$"/>

        <TextView
            android:id="@+id/DownPayment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Down Payment"/>


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/DownPayment"
            android:layout_row="1"
            android:layout_column="1"
            android:editable="true" />

        <TextView
            android:id="@+id/DownPayment_post_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="%"/>

        <TextView
            android:id="@+id/MortgageTerm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Mortgage Term"/>


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/MortgageTerm"
            android:layout_row="2"
            android:layout_column="1"
            android:editable="true" />

        <TextView
            android:id="@+id/MortgageTerm_post_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="years"/>

        <TextView
            android:id="@+id/InterestRate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Interest Rate"/>


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/InterestRate"
            android:layout_row="3"
            android:layout_column="1"
            android:editable="true" />

        <TextView
            android:id="@+id/InterestRate_post_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="%"/>

        <TextView
            android:id="@+id/PropertyTax_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Property Tax"/>


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/PropertyTax"
            android:layout_row="4"
            android:layout_column="1"
            android:editable="true" />

        <TextView
            android:id="@+id/PropertyTax_post_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="$ per year"/>

        <TextView
            android:id="@+id/PropertyInsurance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Property Insurance"/>


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/PropertyInsurance"
            android:layout_row="5"
            android:layout_column="1"
            android:editable="true" />

        <TextView
            android:id="@+id/PropertyInsurance_post_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:text="$ per year"/>

        <TextView
            android:id="@+id/ZipCode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Zip Code"/>


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ZipCode"
            android:layout_row="6"
            android:layout_column="1"
            android:editable="true" />

        <TextView
            android:id="@+id/FirstPayment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:text="First Payment"/>


        <Spinner
            android:id="@+id/Month"
            android:layout_height="wrap_content"
            android:layout_width="125dp"
            android:entries="@array/months"
            android:layout_row="7"
            android:layout_column="1">
        </Spinner>

        <Spinner
            android:id="@+id/Year"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:entries="@array/years"
            android:layout_row="7"
            android:layout_column="2">
        </Spinner>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/SubmitButton"
            android:clickable="true"
            android:layout_column="1"
            android:layout_row="8"/>

    </GridLayout>

</RelativeLayout>
